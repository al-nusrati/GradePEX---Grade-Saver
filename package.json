{
  "name": "grade-guardian-alnusrati",
  "displayName": "GradePEX",
  "description": "Live grading for assignments. Detects logs, TODOs, absolute paths, and spaghetti code before you submit.",
  "version": "0.0.1",
  "publisher": "alNusrati",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grade-guardian.showReport",
        "title": "Show Grade Report"
      }
    ],
    "configuration": {
      "title": "Grade Guardian",
      "properties": {
        "gradeGuardian.studentName": {
          "type": "string",
          "default": "",
          "description": "Your Name/Roll Number (Required for 100/100)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "20.x",
    "typescript-eslint": "^8.18.1",
    "eslint": "^9.17.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  }
}